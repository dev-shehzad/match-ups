{
   "name": "matchups",
   "private": true,
   "version": "0.0.0",
   "description": "MatchUps™ is a custom-built browser designed to revolutionize the way sports fans watch live events and track their bets. Built for efficiency, ease of use, and a fully immersive experience,MatchUps™ optimizes sports viewing with seamless multiview layouts and sports integrations",
   "author": "Umar Abdullah",
   "type": "module",
   "main": "dist-electron/main.js",
   "icon":"build/app-icon.ico",
   "scripts": {
      "dev": "npm-run-all --parallel dev:react dev:electron",
      "dev:react": "vite",
      "dev:electron": "npm run transpile:electron && cross-env NODE_ENV=development electron .",
      "build": "tsc && vite build",
      "preview": "vite preview",
      "transpile:electron": "tsc --project src/electron/tsconfig.json",
      "dist:mac": "npm run transpile:electron && npm run build && electron-builder --mac --arm64",
      "dist:win": "npm run transpile:electron && npm run build && electron-builder --win --x64",
      "dist:linux": "npm run transpile:electron && npm run build && electron-builder --linux --x64",
      "test:e2e": "playwright test",
      "test:unit": "vitest src"
   },
   "dependencies": {
      "@reduxjs/toolkit": "^2.6.0",
      "@tailwindcss/postcss": "^4.0.9",
      "@tailwindcss/vite": "^4.0.9",
      "adm-zip": "^0.5.16",
      "cors": "^2.8.5",
      "electron-widevinecdm": "^8.0.0",
      "express": "^4.21.2",
      "http-proxy-middleware": "^3.0.3",
      "lodash.debounce": "^4.0.8",
      "lucide-react": "^0.476.0",
      "os-utils": "^0.0.14",
      "puppeteer": "^21.11.0",
      "puppeteer-core": "^21.11.0",
      "puppeteer-extra": "^3.3.6",
      "puppeteer-extra-plugin-stealth": "^2.11.2",
      "react": "^18.3.1",
      "react-dom": "^18.3.1",
      "react-feather": "^2.0.10",
      "react-icons": "^5.5.0",
      "react-redux": "^9.2.0",
      "react-router-dom": "^7.2.0",
      "react-webview": "^0.1.0",
      "recharts": "^2.12.7",
      "styled-components": "^6.1.16",
      "tar": "^7.4.3"
   },
   "devDependencies": {
      "@playwright/test": "^1.47.2",
      "@types/adm-zip": "^0.5.7",
      "@types/express": "^5.0.1",
      "@types/http-proxy-middleware": "^0.19.3",
      "@types/node": "^22.5.5",
      "@types/os-utils": "^0.0.4",
      "@types/react": "^18.3.19",
      "@types/react-dom": "^18.3.5",
      "@types/tar": "^6.1.13",
      "@vitejs/plugin-react": "^1.3.2",
      "autoprefixer": "^10.4.20",
      "cross-env": "^7.0.3",
      "electron": "https://github.com/castlabs/electron-releases#v36.2.1+wvcus",
      "electron-builder": "^26.0.12",
      "npm-run-all": "^4.1.5",
      "postcss": "^8.5.3",
      "tailwindcss": "^4.0.9",
      "typescript": "^5.6.2",
      "vite": "^6.2.0",
      "vitest": "^3.0.7"
   }
}
